<h1>My tasks</h1>
<div class="card bg-dark p-3" style="max-width: 10rem">
   <%= link_to(tasks_new_path) do %><i class="far fa-plus-square"></i> Add new task<% end %>
</div>
<p>
<table class="table table-striped table-dark table-hover table-sm py-3" style="width: 400px">

<thead>
  <th class="text-center">Complete?</th>
  <th>Task</th>
  <th class="text-center">Delete</th>
</thead>


<% @tasks.each do |task| %>


<tbody>

  <tr >
    <td class="text-center">
      <input type="checkbox" <%= "checked" if task.completed %>>
    </td>
    <td>
      <%= link_to task.title, task_path(task) %>
    </td>
    <td class="text-center">
      <%= link_to(destroy_path(task)) do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </td>

    <% end %>
  </tr>
</tbody>
</table>
